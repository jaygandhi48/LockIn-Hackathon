{
  "manifest_version": 3,
  "name": "LockedIn",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "LockedIn.png",
    "48": "LockedIn.png"
  },

  "host_permissions": ["<all_urls>"]
}
